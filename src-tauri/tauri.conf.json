{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Winky",
  "version": "0.7.28",
  "identifier": "xldev-winky",
  "build": {
    "beforeDevCommand": "npm run dev:renderer",
    "beforeBuildCommand": "npm run build:renderer",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist/renderer"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Winky",
        "width": 960,
        "height": 640,
        "minWidth": 960,
        "minHeight": 640,
        "resizable": true,
        "decorations": false,
        "shadow": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "devtools": true,
        "userAgent": null
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": [
        {
          "schemes": [
            "winky"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns"
    ],
    "resources": [
      "resources/**/*"
    ]
  }
}
